<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="haseley.abby.info_security_password_creator_and_manager">
    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>
    <application
        android:name=".InjectedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LogIn"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreatePassword" />
        <activity
            android:name=".PasswordViewer"
            android:label="@string/title_activity_password_viewer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PasswordDetails"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings" />
    </application>

</manifest>
