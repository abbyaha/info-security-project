<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="haseley.abby.info_security_password_creator_and_manager.CreatePassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#6eabbc">

    <TableRow
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password Requirements"
            android:id="@+id/textView2"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:gravity="center_horizontal">
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Account Name"
            android:id="@+id/textView8"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:gravity="center_horizontal">
        <EditText
            android:width="10dip"
            android:id="@+id/txtAccount"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"/>
    </TableRow>

    <TableRow>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Password Length:"
            android:id="@+id/textView3"
            android:textColor="#ffffff" />

        <EditText
            android:width="3dip"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtPassLength"
            android:gravity="end"
            android:textColor="#ffffff"
            android:numeric="integer"
            android:hint="10"
            android:text="" />
    </TableRow>

    <TableRow>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Capital Letters"
            android:id="@+id/textView4"
            android:textColor="#ffffff" />

        <EditText
            android:width="3dip"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumUpperCase"
            android:gravity="end"
            android:textColor="#ffffff"
            android:hint="3"
            android:text="" />
    </TableRow>

    <TableRow>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Numbers"
            android:id="@+id/textView5"
            android:textColor="#ffffff" />

        <EditText
            android:width="3dip"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumNumbers"
            android:gravity="end"
            android:textColor="#ffffff"
            android:hint="2"
            android:text="" />
    </TableRow>

    <TableRow>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Special Characters"
            android:id="@+id/textView6"
            android:textColor="#ffffff" />

        <EditText
            android:width="3dip"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumSpecialChars"
            android:gravity="end"
            android:textColor="#ffffff"
            android:hint="1"
            android:text="" />
    </TableRow>

    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sentence"
        android:id="@+id/textView7"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff" />


    <EditText
        android:width="10dip"
        android:id="@+id/txtSentence"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"/>

    <TableRow
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate sentence"
            android:id="@+id/btnGenerateSentence"
            android:layout_marginTop="15dp" />
    </TableRow>

    <TableRow
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate password"
            android:id="@+id/btnCreatePass"
            android:paddingTop="10dp"/>
    </TableRow>

    <TableRow
        android:gravity="center_horizontal">
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/txtPassword"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:id="@+id/btnAccept"
            android:layout_marginTop="15dp" />
    </TableRow>

</TableLayout>
    </ScrollView>
</RelativeLayout>